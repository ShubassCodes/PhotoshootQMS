        <div class="wrapper">
        <div class="login-form">
            <div class="image-column">
                <img src="images/photoshoot_img.png" alt="photoshoot.png"> 
            </div>
            <div class="input-column">
                <main class="form-signin w-100 m-auto">
                    <!-- Error Message -->
                    {{#if errorMessage}}
                    <div class="alert alert-danger" role="alert">
                        {{errorMessage}}
                    </div>
                    {{/if}}
                    <form action="/login" method="post">
                        <h1 class="display-5 fw-bold text-body-emphasis">Photoshoot Session!</h1>
                        <h5 class="mb-5">Q3 Team Building Session</h5>
                        <!-- Name Input Field-->
                        <div class="input-group has-validation">
                            <span class="input-group-text">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-person-fill" viewBox="0 0 16 16">
                                    <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6"/>
                                </svg>
                            </span>
                            <div class="form-floating">
                                <input type="text" class="form-control" id="nameInput" placeholder="Your Name" required="" name="nameInput" autocomplete="off">
                                <label class="opacity-75" for="nameInput">Full Name</label>
                                <ul id="suggestions"></ul>
                              </div>
                        </div>
                        <small class="d-block text-body-secondary mb-5">Name as displayed on card</small>
                        <!-- Get Queue No. button -->
                        <button class="get-queue-button mb-3" type="submit">Get Queue No.</button>
                    </form>
                  </main>
            </div>
        </div>
